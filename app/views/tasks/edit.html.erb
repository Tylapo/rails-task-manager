<div class="container">
  <div class="row">
    <div class="col">
      <h1>Edit a new task</h1>
      <%= form_for(@task) do |f| %>
        <div class="d-flex flex-column">
          <%= f.label :title %>
          <%= f.text_field :title %>
        </div>
        <div class="d-flex flex-column">
          <%= f.label :details %>
          <%= f.text_field :details %>
        </div>
        <div class="mt-3">
          <%= f.label :completed %>
          <%= f.check_box :completed %>
        </div>
        <div class="my-3">
          <%= f.submit %>  
        </div>  
      <% end %>
      <i class="fa fa-trash" aria-hidden="true"></i>
      <%= link_to "Delete this task", delete_task_path(@task.id), method: :delete %>
      <div>
        <br>
        <i class="fa fa-undo" aria-hidden="true"></i>
        <%= link_to "Back to all tasks", tasks_path %>
      </div>
    </div>
  </div>
</div>
